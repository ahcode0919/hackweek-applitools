# frozen_string_literal: true

desc 'Hello world test cases'
task 'run-hello-world' do
  system('rspec spec/hello_world/*')
end

desc 'Run standard tic-tac-toe test cases'
task 'run-std-ttt' do
  system('rspec spec/tic-tac-toe/tictactoe_spec.rb')
end

desc 'Run standard tic-tac-toe test cases'
task 'run-vrt-ttt' do
  system('rspec spec/tic-tac-toe/tictactoe_vrt_spec.rb')
end
